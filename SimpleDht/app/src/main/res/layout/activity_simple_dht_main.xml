<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimpleDhtActivity" >

    <Button
        android:id="@+id/ldump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/button_ldump" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ldump"
        android:fadeScrollbars="true"
        android:gravity="bottom"
        android:maxLines="17"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/gdump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_gdump"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ldump" />

    <Button
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clearScreen"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/gdump" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_test"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/userInput"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteButton"
        android:layout_below="@+id/userInput"
        android:layout_alignStart="@+id/userInput" />

    <Button
        android:text="Insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/insertButton"
        android:layout_alignBaseline="@+id/deleteButton"
        android:layout_alignBottom="@+id/deleteButton"
        android:layout_toEndOf="@+id/deleteButton" />

    <Button
        android:text="Query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/queryButton"
        android:layout_alignBaseline="@+id/insertButton"
        android:layout_alignBottom="@+id/insertButton"
        android:layout_toEndOf="@+id/insertButton" />

</RelativeLayout>